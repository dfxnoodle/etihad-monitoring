# Azure Email Service Configuration
AZURE_EMAIL_CONNECTION_STRING="endpoint=https://bom-gateway.uae.communication.azure.com/;accesskey=YOUR_ACCESS_KEY_HERE"

# Email sender address (from Azure Communication Services)
EMAIL_SENDER_ADDRESS="DoNotReply@<from_domain>"

# Comma-separated list of recipient email addresses
NOTIFICATION_EMAILS="admin@example.com,ops@example.com"

# Odoo URL to monitor
ODOO_MONITOR_URL="https://your-odoo-instance.com"

# System metrics thresholds (percentage)
CPU_THRESHOLD=95
MEMORY_THRESHOLD=90
DISK_THRESHOLD=95

# Alert if threshold exceeded for this many minutes
ALERT_DURATION_MINUTES=15

# Disk mountpoints to monitor (comma-separated)
DISK_MONITOR_MOUNTPOINTS="/,/boot/efi,/mnt,/mnt/data"
